<beast version="2.0"
       namespace="beast.core
                 :beast.core.util
                 :beast.base.inference.parameter
                 :beast.evolution.alignment
                 :beast.evolution.likelihood
                 :beast.base.evolution.tree
                 :beast.base.evolution.tree.coalescent
                 :beast.base.evolution.sitemodel
                 :beast.base.evolution.substitutionmodel
                 :beast.evolution.operators
                 :beast.math.distributions
                 :feast.simulation
                 :coalre.network
                 :coalre.statistics
                 :coalre.simulator
                 :coalre.distribution
                 :coalre.operators">

    <run spec="GPSimulator" nSims="1">
        <simulationObject id="network_truth" spec="SuperspreadingStructuredSIRwithReassortment" 
        fileName="$(filebase).trees" 
        reassortmenProbability="0.1" 
        simulationTime="1000" 
        nSegments="4" minSamples="50"  k="1.62620072006638">
          <transmissionRate spec="RealParameter" value="1.68557534612032 1.68557534612032"/>
          <recoveryRate spec="RealParameter" value="1 1"/>
          <waningImmunityRate spec="RealParameter" value="0.01 0.1"/>
          <samplingProbability spec="RealParameter" value="0.0116270119109272 0.00871333045718752 "/>
          <populationSize spec="IntegerParameter" value="10000 10000"/>
          <migrationRates spec="RealParameter" value="0.01 0.01"/>
            <segmentTree id="seg1tree_truth" spec="Tree"/>
            <segmentTree id="seg2tree_truth" spec="Tree"/>
            <!-- <segmentTree id="seg3tree_truth" spec="Tree"/>
            <segmentTree id="seg4tree_truth" spec="Tree"/> -->
        </simulationObject>

        <logger spec="beast.base.inference.Logger" fileName="$(filebase).log" logEvery="1">
            <log idref="network_truth"/>
        </logger>
    </run>

</beast>
